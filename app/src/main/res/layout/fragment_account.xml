<?xml version="1.0" encoding="utf-8"?>


<!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.mainscreen.account.AccountFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:elevation="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="John"
            android:padding="16dp"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@id/img_item_photo"/>
    </FrameLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="260dp"
            android:orientation="vertical">
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Edit Profile"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"/>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Daftar Transaksi"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"/>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Review"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"/>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Log out"
                android:textColor="@color/colorStart"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"/>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
